{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "warn",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-trailing-spaces":[
            "error", {
                "skipBlankLines": true, 
                "ignoreComments": true
            }
        ],
		"no-unused-vars":"off",
		"no-console":"off",
		"no-extra-semi":"off",
		"no-mixed-spaces-and-tabs":"warn"	
    }
}
